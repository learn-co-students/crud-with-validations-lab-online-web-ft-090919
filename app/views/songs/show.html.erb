<% if @song %>

  <h4><%= link_to "Edit Song", edit_song_path %></h4>

  <h1><%= @song.title %></h1>

  <h2>By: <%= @song.artist_name %></h2>

  <h4>Genre: <%= @song.genre %></h4>

  <% if @song.released %>
    <h4>Release Year: <%= @song.release_year %></h4>
  <% end %>

  <%= button_to "Delete Song", @song, :method => :delete %>

<% else %>
  <h1>That song does not exist!</h1>
<% end %>