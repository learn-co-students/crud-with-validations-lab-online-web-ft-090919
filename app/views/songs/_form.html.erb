<%= form_for @song do |f| %>

  <% if @song.errors.any? %>
    <h3>There seem to be some issues</h3>
      <ul>
        <% @song.errors.full_messages.each.uniq do |error| %>
          <li><%= error.to_s %></li>
        <% end %>
      </ul>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  </div>

  <div class="field">
    <%= f.label :released %>
    <%= hidden_field :song, :released %>
    <%= f.check_box :released %>
  </div>

  <div class="field">
    <%= f.label :release_year %>
    <%= f.text_field :release_year %>
  </div>


  <div class="field">
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </div>

  <%= f.submit "Create Song" %>

<% end %>