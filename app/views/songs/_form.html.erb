<%= form_for(@song) do |f| %>
    <% if @song.errors.any? %>
        <div id="error_explanation">
            <h3>Please fix the errors below:</h3>
            <ul>
                <% @song.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
    <br>
    <%= f.label :release_year %>
    <%= f.number_field :release_year %>
    <br>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
    <br>
    <%= f.label :released %>
    <%= f.check_box :released %>
    <br>
    <%= f.button %>
<% end %>